{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Watch Sass (dev CSS)",
		"type": "shell",
		"command": "sass --watch src/style.scss:styles/tablance.css --style=expanded --source-map",
		"problemMatcher": [],
		"group": "build"
	  },
	  {
		"label": "Watch Sass (min CSS)",
		"type": "shell",
		"command": "sass --watch src/style.scss:styles/tablance.min.css --style=compressed",
		"problemMatcher": [],
		"group": "build"
	  },
	  {
		"label": "Watch Sass (all)",
		"dependsOn": [
		  "Watch Sass (dev CSS)",
		  "Watch Sass (min CSS)"
		],
		"dependsOrder": "parallel",
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"runOptions": {
		  "runOn": "folderOpen"
		}
	  },
	  {
		"label": "Start Static Server (serve .)",
		"type": "shell",
		"command": "npx serve .",
		"problemMatcher": [],
		"options": {
			"cwd": "${workspaceFolder}"
		},
		"presentation": {
			"reveal": "always",
			"panel": "new"
		}
	  },
	  {
		"label": "Build Tablance bundle",
		"type": "shell",
		"command": "npm run build",
		"options": {
		  "cwd": "${workspaceFolder}"
		},
		"problemMatcher": [],
		"group": {
		  "kind": "build",
		  "isDefault": false
		},
		"presentation": {
		  "reveal": "always",
		  "panel": "shared",
		  "clear": true
		}
	  }
	]
  }
  
