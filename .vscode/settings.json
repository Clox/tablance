{
	"editor.rulers": [
		120
	],
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
	"editor.bracketPairColorization.enabled": true,

	"workbench.colorCustomizations": {
		"editorWarning.foreground": "#FFFF0015",
		"editorWarning.border": "#00000000",
		"editorWarning.background": "#00000000"
	},
	"editor.diagnostics.warning": false,//to remove the yellow squiggly lines covering functions that are too long. 
											//they become so hard to read and fix with the squigglies there
	"liveSassCompile.settings.formats": [
		{
			"format": "expanded",
			"extensionName": ".css",
			"savePath": "/styles"
		},
		{
			"extensionName": ".min.css",
			"format": "compressed",
			"savePath": "/styles"
		}
	],
	"liveSassCompile.settings.excludeList": [
		"**/node_modules/**",
		".vscode/**"
	],
	"liveSassCompile.settings.generateMap": false,
	//autoprefix, will auto add perfix like -webkit- -moz-..
	"liveSassCompile.settings.autoprefix": [
		"> 1%",
		"last 2 versions"
	],
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
}